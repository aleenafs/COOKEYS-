  <script>
    // small, safe JS — no external dependencies
    document.getElementById('year').textContent = new Date().getFullYear();

    function scrollToId(id) {
      const el = document.getElementById(id);
      if (el) el.scrollIntoView({ behavior: 'smooth' });
    }

    function mockSearch() {
      const q = document.getElementById('demo-location').value.trim() || 'your area';
      const el = document.getElementById('demo-results');
      el.textContent = `Demo result: shows low-demand times for ${q} — try 10:00–11:00 or 14:00–15:00.`;
    }

    function handleBooking(e) {
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const station = document.getElementById('stationSelect').value;
      const slot = document.getElementById('slot').value;
      if (!name || !station || !slot) {
        document.getElementById('bookingMsg').textContent = 'Please fill all fields.';
        return;
      }
      document.getElementById('bookingMsg').textContent = `Thanks ${name}. Demo reservation at ${station} on ${slot}.`;
      e.target.reset();
    }

    function handleContact(e) {
      e.preventDefault();
      const name = document.getElementById('cname').value.trim();
      const email = document.getElementById('cemail').value.trim();
      if (!name || !email) {
        document.getElementById('contactMsg').textContent = 'Please provide your name and contact.';
        return;
      }
      document.getElementById('contactMsg').textContent = `Thanks ${name}. We'll contact you at ${email}.`;
      e.target.reset();
    }
  </script>
